<h2>Number Verify - Check</h2>
@using (Html.BeginForm("NumberVerifyCheck", "Home"))
{
    @Html.LabelFor(m => m.NV_C.RequestId)
    @Html.TextBoxFor(m => m.NV_C.RequestId)

    @Html.LabelFor(m => m.NV_C.Code)
    @Html.TextBoxFor(m => m.NV_C.Code)
