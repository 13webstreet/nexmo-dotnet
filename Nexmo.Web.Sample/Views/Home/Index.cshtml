@using (Html.BeginForm("NumberVerify", "Home"))
{
    @Html.LabelFor(m => m.NV_V.Number)
    @Html.TextBoxFor(m => m.NV_V.Number)

    @Html.LabelFor(m => m.NV_V.Brand)
    @Html.TextBoxFor(m => m.NV_V.Brand)
    <input type="submit" />
